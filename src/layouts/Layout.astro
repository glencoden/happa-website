---
import TopBar from '../components/TopBar/TopBar.tsx'
import Navigation from '../components/Navigation/Navigation.tsx'
---

<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1" />
        <meta name="theme-color" content="#000000" />
        <meta
            name="description"
            content="Happa Restaurant in Berlin Kreuzberg. Regional, seasonal, vegan, plant-based, low-waste. Lunch and dinner events."
        />
        <link rel="icon" type="image/svg+xml" href="/icons/favicon.png" />
        <title>HAPPA</title>
    </head>
    <body>
        <TopBar />
        <Navigation currentPathname={Astro.url.pathname} />

        <main>
            <slot />
        </main>

        // footer
    </body>
</html>

<style is:global>
    @font-face {
        font-family: MonumentGrotesk;
        src: url("/fonts/MonumentGrotesk-Regular.otf") format("opentype");
    }

    @font-face {
        font-family: MonumentGrotesk;
        font-weight: bold;
        src: url("/fonts/MonumentGrotesk-Medium.otf") format("opentype");
    }

    * {
        box-sizing: border-box;
    }

    :root {
        --white: #F6F6F6;
        --black: #000000;
        --grey: #B5B4B3;
        --primary-color: #E0878C;

        --space-s: 12px;
        --space-m: 42px;

        --font-size-s: 14px;
        --font-size-m: 20px;

        --top-bar-height: 48px;

        --transition-time-short: 0.2s;
    }

    html {
        font-family: MonumentGrotesk, system-ui, sans-serif;
        -webkit-font-smoothing: antialiased;
        -moz-osx-font-smoothing: grayscale;

        color: var(--black);
        background-color: var(--white);
    }

    body {
        padding: 0;
        margin: 0;
    }

    main {
        margin: auto;
        width: 90vw;
    }

    a {
        text-decoration: none;
        color: inherit;
    }

    @media only screen and (min-width: 601px) {}
    @media only screen and (min-width: 901px) {}
    @media only screen and (min-width: 1201px) {}
    @media only screen and (min-width: 1537px) {}
</style>
